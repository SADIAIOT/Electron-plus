{
  "name": "electron-plus",
  "version": "1.0.0",
  "description": "Electron Plus Ã© um framework inovador que visa facilitar o desenvolvimento de aplicativos desktop utilizando tecnologias web modernas.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build"
  },
  "build": {
    "appId": "com.Electroplus.app",
    "productName": "ElectronPlusApp",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "ipc.js",
      "256x256.png",
      "256x256.ico",
      "preload.js",
      "node_modules/**/*",
      "public/**/*",
      "libs/**/*",
      "style/**/*",
      "src/**/*",
      "images/**/*"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "repository": "https://github.com/SADIAIOT/Electron-plus",
  "keywords": [
    "Electron",
    "Electron-plus"
  ],
  "author": "Walter Alexandre Santana",
  "license": "MIT",
  "devDependencies": {
    "electron": "^26.6.10",
    "electron-builder": "^25.0.5",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "electron-pos-printer": "^1.3.7",
    "mathjs": "^13.1.1",
    "node-thermal-printer": "^4.4.2",
    "sqlite3": "^5.1.6"
  }
}
